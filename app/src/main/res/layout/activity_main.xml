<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#9E9A85">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center"
            android:textSize="40sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonseven"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="BtnFuncNum"
            android:text="7"
            android:textSize="24dp" />

        <Button
            android:id="@+id/buttoneight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="BtnFuncNum"
            android:text="8"
            android:textSize="24dp"
            app:iconTint="#771B1B" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="BtnFuncNum"
            android:text="9"
            android:textSize="24dp"
            app:iconTint="#771B1B" />

        <Button
            android:id="@+id/buttontimes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="BtnFuncTimes"
            android:text="X"
            android:textSize="24dp"
            app:iconTint="#771B1B" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonfour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="BtnFuncNum"
            android:text="4"
            android:textSize="24dp"
            app:iconTint="#771B1B" />

        <Button
            android:id="@+id/buttonfive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="BtnFuncNum"
            android:text="5"
            android:textSize="24dp"
            app:iconTint="#771B1B" />

        <Button
            android:id="@+id/buttonsix"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="BtnFuncNum"
            android:text="6"
            android:textSize="24dp"
            app:iconTint="#771B1B" />

        <Button
            android:id="@+id/buttonminus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"

            android:onClick="BtnFuncMinus"
            android:text="-"
            android:textSize="24dp"
            app:iconTint="#771B1B" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="btnClickFunc"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="BtnFuncNum"
            android:text="1"
            android:textSize="24dp"
            app:iconTint="#771B1B" />


        <Button
            android:id="@+id/buttontwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="BtnFuncNum"
            android:text="2"
            android:textSize="24dp"
            app:iconTint="#771B1B" />

        <Button
            android:id="@+id/buttonthree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="BtnFuncNum"
            android:text="3"
            android:textSize="24dp"
            app:iconTint="#771B1B" />

        <Button
            android:id="@+id/buttonplus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="BtnFuncPlus"
            android:text="+"
            android:textSize="24dp"
            app:iconTint="#771B1B" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="btnClickFunc"
        android:orientation="horizontal">

        <Button
            android:id="@+id/allclear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="BtnFuncAC"
            android:text="AC"
            android:textSize="24dp"
            app:iconTint="#771B1B" />


        <Button
            android:id="@+id/buttonzero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="BtnFuncNum"
            android:text="0"
            android:textSize="24dp"
            app:iconTint="#771B1B" />

        <Button
            android:id="@+id/buttonsub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="BtnFuncSub"
            android:text="/"
            android:textSize="24dp"
            app:iconTint="#771B1B" />

        <Button
            android:id="@+id/buttoneql"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="BtnFuncEql"
            android:text="="
            android:textSize="24dp"
            app:iconTint="#771B1B" />


    </LinearLayout>
</LinearLayout>